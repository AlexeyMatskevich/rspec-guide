{
  "$schema": "https://raw.githubusercontent.com/jetify-com/devbox/0.16.0/.schema/devbox.schema.json",
  "packages": [
    "python3@latest",
    "uv",
    "ruby@latest",
    "marksman@latest",
    "zlib@latest",
    "stdenv.cc.cc.lib",
    "bun"
  ],
  "shell": {
    "init_hook": [
      "echo 'Welcome to devbox!' > /dev/null"
    ],
    "scripts": {
      "test": [
        "echo \"Error: no test specified\" && exit 1"
      ],
      "claude": "export LD_LIBRARY_PATH=\"$(nix eval --raw nixpkgs#stdenv.cc.cc.lib)/lib:$(nix eval --raw nixpkgs#zlib.out)/lib${LD_LIBRARY_PATH:+:$LD_LIBRARY_PATH}\" && claude"
    }
  }
}
